<body style="height: 100%; background-color: #3498DB;">
<div class="form-group-up">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, placeholder: 'user@email.com' %>
    <%= f.input :password, placeholder: 'Your Password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary btnlog" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</body>